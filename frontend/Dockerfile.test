# Multi-stage build for Next.js application

# Stage 1: Build the application
FROM node:20-slim AS builder

# Set working directory
WORKDIR /app

# Accept build-time argument for NEXT_PUBLIC_GRAPHQL_URL
ARG AEROCODE_TEST_NEXT_PUBLIC_GRAPHQL_URL
ENV NEXT_PUBLIC_GRAPHQL_URL=$AEROCODE_TEST_NEXT_PUBLIC_GRAPHQL_URL

ARG AEROCODE_TEST_GRAPHQL_URL
ENV GRAPHQL_URL=$AEROCODE_TEST_GRAPHQL_URL

ARG AEROCODE_TEST_NEXT_PUBLIC_STORAGE_URL
ENV NEXT_PUBLIC_STORAGE_URL=$AEROCODE_TEST_NEXT_PUBLIC_STORAGE_URL

ARG AEROCODE_TEST_NEXT_PUBLIC_PLUSGRADE_API_KEY
ENV NEXT_PUBLIC_PLUSGRADE_API_KEY=$AEROCODE_TEST_NEXT_PUBLIC_PLUSGRADE_API_KEY

ARG AEROCODE_TEST_NEXT_PUBLIC_PLUSGRADE_PID
ENV NEXT_PUBLIC_PLUSGRADE_PID=$AEROCODE_TEST_NEXT_PUBLIC_PLUSGRADE_PID

# Copy package files for dependency installation
COPY package.json package-lock.json* ./

# Install ALL dependencies (including dev dependencies needed for build)
RUN npm ci 

# Copy the rest of the application code
COPY . .

# Set production environment for build
ENV NODE_ENV=production

# Build the Next.js app
RUN npm run build

# Stage 2: Setup production image
FROM node:20-slim

# Set working directory
WORKDIR /app

# Set production environment
ENV NODE_ENV=production

# Accept build-time arguments
ARG AEROCODE_TEST_NEXT_PUBLIC_GRAPHQL_URL
ENV NEXT_PUBLIC_GRAPHQL_URL=$AEROCODE_TEST_NEXT_PUBLIC_GRAPHQL_URL

ARG AEROCODE_TEST_GRAPHQL_URL
ENV GRAPHQL_URL=$AEROCODE_TEST_GRAPHQL_URL

ARG AEROCODE_TEST_NEXT_PUBLIC_STORAGE_URL
ENV NEXT_PUBLIC_STORAGE_URL=$AEROCODE_TEST_NEXT_PUBLIC_STORAGE_URL

ARG AEROCODE_TEST_M365_EMAIL_USER
ENV M365_EMAIL_USER=$AEROCODE_TEST_M365_EMAIL_USER

ARG AEROCODE_TEST_NEXT_PUBLIC_PLUSGRADE_API_KEY
ENV NEXT_PUBLIC_PLUSGRADE_API_KEY=$AEROCODE_TEST_NEXT_PUBLIC_PLUSGRADE_API_KEY

ARG AEROCODE_TEST_NEXT_PUBLIC_PLUSGRADE_PID
ENV NEXT_PUBLIC_PLUSGRADE_PID=$AEROCODE_TEST_NEXT_PUBLIC_PLUSGRADE_PID 

ARG AEROCODE_TEST_CONTACT_FORM_RECIPIENT 
ENV CONTACT_FORM_RECIPIENT=$AEROCODE_TEST_CONTACT_FORM_RECIPIENT

ARG AEROCODE_BELAMA_SIGNUP_RECIPIENT
ENV BELAMA_SIGNUP_RECIPIENT=$AEROCODE_BELAMA_SIGNUP_RECIPIENT

ARG AEROCODE_TEST_AZURE_AUTH_CLIENT_ID
ENV AZURE_AUTH_CLIENT_ID=$AEROCODE_TEST_AZURE_AUTH_CLIENT_ID

ARG AEROCODE_TEST_AZURE_AUTH_CLIENT_SECRET
ENV AZURE_AUTH_CLIENT_SECRET=$AEROCODE_TEST_AZURE_AUTH_CLIENT_SECRET 

ARG AEROCODE_TEST_AZURE_AUTH_TENANT_ID
ENV AZURE_AUTH_TENANT_ID=$AEROCODE_TEST_AZURE_AUTH_TENANT_ID


# Copy package files
COPY package.json package-lock.json* ./

# Install only production dependencies
RUN npm ci --only=production

# Copy built app from builder stage
COPY --from=builder /app/.next ./.next
COPY --from=builder /app/public ./public
COPY --from=builder /app/next.config.ts ./

# Expose port (Next.js default is 3000)
EXPOSE 3000

# Set healthcheck
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 CMD curl -f http://localhost:3000/ || exit 1

# Start the Next.js app
CMD ["npm", "start"]